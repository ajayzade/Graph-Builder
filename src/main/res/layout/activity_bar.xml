<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bar_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="applications.graph.lenovo.graphbuilder.Bar"
    android:orientation="vertical"
    android:background="#000">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/bar_value"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Enter value 1..."
                    android:textColor="#f4eded"
                    android:inputType="numberDecimal"
                    android:textColorHint="#f4eded"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <EditText
                    android:id="@+id/bar_label"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:hint="Enter label 1..."
                    android:textColor="#f4eded"
                    android:textColorHint="#f4eded"
                    android:textStyle="bold"
                    android:gravity="center"
                    />
                <Button
                    android:id="@+id/bar_btn1"
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="#51ea23"
                    android:textStyle="bold"
                    android:text="ADD"
                    android:textColor="#f4eded"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:text="VALUES 1\t\t\t\t\t\t\t\t\tLABELS 1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#f4eded"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/bar_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#f4eded"
                    android:textSize="20sp"/>
            </LinearLayout>
                <Button
                    android:id="@+id/bar_clc"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:background="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textColor="#f4eded"
                    android:text="CLEAR"/>
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="20dp"
                android:background="#f4eded">
            </com.github.mikephil.charting.charts.BarChart>
            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/hbar"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="20dp"
                android:background="#f4eded">
            </com.github.mikephil.charting.charts.HorizontalBarChart>
        </LinearLayout>
    </ScrollView>
</LinearLayout>