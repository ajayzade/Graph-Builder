<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scatter_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="applications.graph.lenovo.graphbuilder.Pie"
    android:orientation="vertical"
    android:background="#000">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/sc_value"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="Enter values..."
                android:textColor="#f4eded"
                android:inputType="numberDecimal"
                android:textColorHint="#f4eded"
                android:textStyle="bold"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/sc_label"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="Enter labels..."
                android:textColor="#f4eded"
                android:textColorHint="#f4eded"
                android:textStyle="bold"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/sc_btn1"
                    android:layout_width="120dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="60dp"
                    android:layout_marginLeft="130dp"
                    android:background="#51ea23"
                    android:textStyle="bold"
                    android:text="ADD"
                    android:textColor="#f4eded"
                    android:textSize="30sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="VALUES\t\t\t\t\t\t\t\t\tLABELS"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#f4eded"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/sc_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#f4eded"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/sc_clc"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:background="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textColor="#f4eded"
                android:text="CLEAR"/>
            <com.github.mikephil.charting.charts.ScatterChart
                android:id="@+id/scatter"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="#f4eded"
                android:layout_marginTop="20dp">
            </com.github.mikephil.charting.charts.ScatterChart>
        </LinearLayout>
    </ScrollView>
</LinearLayout>