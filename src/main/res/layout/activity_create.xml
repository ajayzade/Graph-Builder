<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="applications.graph.lenovo.graphbuilder.CreateActivity"
    android:orientation="vertical"
    android:background="#000">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/value_1"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Enter x Coordinate"
                android:textColor="#f4eded"
                android:inputType="none"
                android:textColorHint="#f4eded"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/value_2"
                android:inputType="none"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Enter y Coordinate"
                android:textColor="#f4eded"
                android:textColorHint="#f4eded"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="SUBMIT VALUES"
                android:textSize="20sp"
                android:padding="20dp"
                android:background="#51ea23"
                android:textColor="#f4eded"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:textColor="#f4eded"
                android:text="X\t\t\t\t\t|\t\t\t\t\tY"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/show_value"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:textColor="#f4eded"
                android:textSize="20dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:background="#0e30ef"
                android:textSize="20sp"
                android:padding="10dp"
                android:textColor="#f4eded"
                android:text="clear"
                android:textStyle="bold"/>
            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="20dp"/>
            <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:id="@+id/bar_graph"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>